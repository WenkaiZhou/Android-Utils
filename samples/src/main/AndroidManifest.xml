<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevin.utils.samples">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AndroidOSActivity"
            android:label="@string/android_os_label"/>
        <activity android:name=".activity.CPUInfoActivity"
            android:label="@string/cpu_info_label"/>
        <activity android:name=".activity.ApplicationActivity"
            android:label="@string/application_label"/>
        <activity android:name=".activity.LocalFileActivity"
            android:label="@string/localfile_label"/>
        <activity android:name=".activity.ScreenActivity"
            android:label="@string/screen_label"/>
    </application>

</manifest>
